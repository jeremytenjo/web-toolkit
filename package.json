{
  "name": "@tenjojeremy/web-toolkit",
  "version": "3.29.0",
  "repository": "git://github.com/tenjojeremy/Web-Toolkit.git",
  "description": "Library of reusable UI and utilities",
  "license": "MIT",
  "files": [
    "build"
  ],
  "scripts": {
    "start": "start-storybook -p 9002 -c .storybook -s public --quiet",
    "deploy": "yarn lint:check && yarn test && yarn build:storybook && firebase deploy && yarn build:library && yarn publish --minor && gpush && rmdir /s /q build",
    "build:library": "cross-env NODE_ENV=production BABEL_ENV=es babel --config-file ./.babelrc ./src --out-dir ./build/ --ignore 'src/**/*.spec.js','src/**/*.test.js','src/**/*.stories.js' ",
    "build:storybook": "build-storybook -c .storybook -o .storybook/storybook-build -s public",
    "deploy:firebase": "firebase deploy --token=$FIREBASE_DEPLOY_TOKEN",
    "publish:minor": "yarn build:library && yarn publish --minor",
    "test": "jest",
    "pretty": "prettier \"**/*.js\" --write",
    "lint:fix": "eslint ./src --fix",
    "lint:check": "eslint ./src",
    "check-staged": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "yarn lint:fix",
      "yarn pretty",
      "prettier --list-different",
      "jest --passWithNoTests"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-syntax-throw-expressions": "^7.2.0",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@material-ui/core": "^4.1.1",
    "@storybook/addon-notes": "^5.1.4",
    "@storybook/addon-storysource": "^5.1.4",
    "@storybook/addon-viewport": "^5.1.4",
    "@storybook/react": "^5.1.4",
    "@tenjojeremy/eslint-config": "^1.1.0",
    "@tenjojeremy/webpack-config": "^1.3.0",
    "babel-loader": "^8.0.6",
    "date-fns": "^1.30.1",
    "firebase": "^6.1.1",
    "husky": "^2.4.1",
    "image-compressor.js": "^1.1.4",
    "react": "^16.8.6",
    "react-bottom-scroll-listener": "^3.0.0",
    "react-dom": "^16.8.6",
    "react-final-form-hooks": "^2.0.0",
    "react-hot-loader": "^4.11.1",
    "react-lazyload": "^2.6.1",
    "react-stars": "^2.2.5",
    "react-swipeable-views": "^0.13.3",
    "styled-components": "^5.0.0-beta.5",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "firebase-tools": "^7.0.0",
    "jest": "^24.8.0",
    "storybook-chromatic": "^1.3.3",
    "webpack-cli": "^3.3.4"
  }
}
