{
  "name": "@tenjojeremy/web-toolkit",
  "version": "5.3.0",
  "repository": "git://github.com/tenjojeremy/Web-Toolkit.git",
  "description": "Library of reusable UI and utilities",
  "publisher": "tenjojeremy",
  "license": "MIT",
  "scripts": {
    "start": "start-storybook -p 9002 -c .storybook -s public --quiet",
    "deploy": "yarn lint:check && yarn cy:run-ci && yarn deploy:firebase && yarn publish:snippets && yarn publish:library && git push",
    "build:snippets": "node tenjo-web-toolkit-snippets/snippets.gen.js",
    "build:library": "cross-env NODE_ENV=production BABEL_ENV=es babel --config-file ./.babelrc ./src --out-dir ./build/ --ignore 'src/**/*.spec.js','src/**/*.spec-cy.js','src/**/*.test.js','src/**/*.stories.js' ",
    "build:storybook": "build-storybook -c .storybook -o .storybook/storybook-build -s public",
    "deploy:firebase": "yarn build:storybook && firebase deploy",
    "publish:library": "yarn build:library && npm version minor && cp package.json ./build && cd build && npm publish && cd ../ && rmdir /s /q build",
    "publish:snippets": "yarn build:library && yarn build:snippets && cd tenjo-web-toolkit-snippets && vsce publish minor && gpush && code --install-extension tenjojeremy.tenjo-web-toolkit-snippets --force",
    "test": "jest",
    "pretty": "prettier \"**/*.js\" --write",
    "cy:open": "cypress open",
    "cy:run": "cypress run --browser chrome",
    "cy:run-ci": "start-server-and-test start http://localhost:9002 cy:run",
    "lint:fix": "eslint ./src --fix",
    "lint:check": "eslint ./src",
    "check-staged": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "yarn lint:fix",
      "yarn pretty",
      "prettier --list-different",
      "jest --passWithNoTests"
    ]
  },
  "eslintConfig": {
    "extends": "@tenjojeremy/eslint-config"
  },
  "prettier": "@tenjojeremy/prettier-config",
  "dependencies": {
    "@material-ui/core": "^4.8.3",
    "cross-env": "^6.0.3",
    "decamelize": "^3.2.0",
    "react-bottom-scroll-listener": "^3.0.0",
    "react-lazyload": "^2.6.5",
    "react-router-dom": "^5.1.2",
    "react-stars": "^2.2.5",
    "styled-components": "^4.4.1",
    "twit": "^2.2.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@storybook/addon-actions": "^5.3.0",
    "@storybook/addon-docs": "^5.3.0",
    "@storybook/react": "^5.3.0",
    "@tenjojeremy/babel-config": "^1.11.0",
    "@tenjojeremy/eslint-config": "^2.5.0",
    "@tenjojeremy/prettier-config": "latest",
    "cypress": "^3.8.2",
    "date-fns": "^2.9.0",
    "eslint-plugin-cypress": "^2.8.1",
    "firebase": "^7.6.2",
    "husky": "^4.0.6",
    "image-compressor.js": "^1.1.4",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "node-emoji": "^1.10.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "start-server-and-test": "^1.10.6",
    "storybook-react-router": "^1.0.8",
    "yup": "^0.28.0"
  }
}
